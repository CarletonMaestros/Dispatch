<Window x:Class="Orchestra.SongSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select a Song!" Height="720" Width="1050" WindowStyle="None" WindowState="Maximized">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="21*"/>
            <RowDefinition Height="76*"/>
            <RowDefinition/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="428*"/>
            <ColumnDefinition Width="154*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="62*"/>
            <ColumnDefinition Width="95*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.504,1.5" StartPoint="0.504,0.03">
                <GradientStop Color="DimGray" Offset="0"/>
                <GradientStop Color="Black" Offset="0.567"/>
            </LinearGradientBrush>
        </Grid.Background>
        <MediaElement Name="SongPreview" LoadedBehavior="Manual" MediaEnded="SongLoop" Grid.ColumnSpan="5" Grid.RowSpan="8" />        
        <ListBox Name="SongSelector" Margin="25,25,23,34" Grid.RowSpan="8">
            <ListBoxItem Content="    The Beatles: Hard Day's Night" Height="50" FontSize="18" Background="White" Selected="ListBoxItem_Selected_7"/>
            <ListBoxItem Content="    Beethoven: Symphony No. 5" Height="50" FontSize="18"   Background="LightGray" Selected="ListBoxItem_Selected_4"/>
            <ListBoxItem Content="    Daft Punk: Get Lucky" Height="50" FontSize="18" Background="White" Selected="ListBoxItem_Selected_6"/>
            <ListBoxItem Content="    Dvorak: From the New World" Height="50" FontSize="18" Background="LightGray" Selected="ListBoxItem_Selected_11"/>
            <ListBoxItem Content="    Erasure: Always" Height="50" FontSize="18" Background="White" Selected="ListBoxItem_Selected_9"/>
            <ListBoxItem Content="    Falco: Rock Me Amadeus" Height="50" FontSize="18" Background="LightGray" Selected="ListBoxItem_Selected_8"/>
            <ListBoxItem Content="    Frank Sinatra: That's Life" Height="50"  FontSize="18"  Background="White" Selected="ListBoxItem_Selected_19"/>
            <ListBoxItem Content="    Grieg: In The Hall of the Mountain King" Height="50" FontSize="18"  Background="LightGray" Selected="ListBoxItem_Selected_5"/>
            <ListBoxItem Content="    James Brown: It's a Man's Man's Man's World" Height="50"  FontSize="18"  Background="White" Selected="ListBoxItem_Selected_20"/>
            <ListBoxItem Content="    Jamiroquai: Canned Heat" Height="50" FontSize="18" Background="LightGray" Selected="ListBoxItem_Selected_15"/>
            <ListBoxItem Content="    Led Zeppelin: Stairway to Heaven" Height="50" FontSize="18"  Background="White" Selected="ListBoxItem_Selected_21"/>
            <ListBoxItem Content="    Madonna: Like a Prayer" Height="50" FontSize="18" Background="LightGray" Selected="ListBoxItem_Selected_2"/>
            <ListBoxItem Content="    OutKast: Hey Ya!" Height="50" FontSize="18"  Background="White" Selected="ListBoxItem_Selected_17"/>
            <ListBoxItem Content="    Paramore: Misery Business" Height="50"  FontSize="18"  Background="LightGray" Selected="ListBoxItem_Selected_23"/>
            <ListBoxItem Content="    Prince: When Doves Cry" Height="50" FontSize="18"  Background="White" Selected="ListBoxItem_Selected_14"/>
            <ListBoxItem Content="    Queen: Bohemian Rhapsody" Height="50" FontSize="18" Background="LightGray" Selected="ListBoxItem_Selected_13"/>
            <ListBoxItem Content="    Radiohead: Paranoid Android" Height="50"  FontSize="18"  Background="White" Selected="ListBoxItem_Selected_1"/>
            <ListBoxItem Content="    The Rolling Stones: Jumpin' Jack Flash" Height="50" FontSize="18"  Background="LightGray" Selected="ListBoxItem_Selected_16"/>
            <ListBoxItem Content="    Stevie Wonder: Superstition" Height="50"  FontSize="18"  Background="White" Selected="ListBoxItem_Selected_22"/>
            <ListBoxItem Content="    Tchaikovsky: Swan Lake Prelude" Height="50" FontSize="18"  Background="LightGray" Selected="ListBoxItem_Selected_12"/>
            <ListBoxItem Content="    Vivaldi: Autumn" Height="50" FontSize="18"  Background="White" Selected="ListBoxItem_Selected_3"/>
        </ListBox>
        <Image Name="PreviewImage" Source="C:\Users\admin\Desktop\VirtualOrchestra\GUI\Resources\AlbumArt.jpg" Stretch="Uniform" StretchDirection="Both" Margin="22,18,16,18" Grid.Column="1" Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="2"/>
        <Button Name="ConfirmButton" Content="Confirm" FontSize="20"  Click="ConfirmButtonClick"  Margin="22,20,17,20" RenderTransformOrigin="-0.182,0.789" Grid.Column="1" Grid.Row="5"/>
        <CheckBox Content="Use Right Hand Volume" Checked="RightHandMode" Unchecked="LeftHandMode"  Foreground ="White" Margin ="28,13,64,0" Grid.Column="1" Grid.Row="6" Height="25" VerticalAlignment="Top" Grid.ColumnSpan="4">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <Button Name="MenuButton" Content="Main Menu" FontSize="20"  Click="MenuButtonClick"  Margin="29,20,17,20" Grid.Column="2" Grid.Row="5" Grid.ColumnSpan="2"/>
        <Border BorderBrush="DarkGray" BorderThickness="3" Margin="25,25,23,34" Grid.RowSpan="8"/>
        <Label Name="ArtistName" Foreground="White" Content="Pick a Song!" FontSize="20" Margin="3,60,10,51" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Label Name="SongName" Foreground="White" FontSize="20" Margin="3,19,10,92" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Label Name="YearText" Foreground="White" FontSize="20" Margin="3,101,10,10" Grid.Column="3" Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>

