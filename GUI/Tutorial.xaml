<Window x:Class="Orchestra.Tutorial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tutorial" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
        <ColumnDefinition Width ="1.5*"/>
        <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="TargetBox" Height="40" Width="50" Stroke="Red"/>
        <Button Content="Next" Click="Next_Button_Click" Grid.Column="1" HorizontalAlignment="Left" Margin="21,238,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBlock x:Name="Instructions" Grid.Column="1" HorizontalAlignment="Left" Height="204" Margin="10,10,0,0" TextWrapping="Wrap" 
                   Text="these are instructions. hello grace. wave your arms and make music very yes. this'll get filled in when window initializes, and updated at each next button click. skeleton could go to the left of this."
                   VerticalAlignment="Top" Width="97"/>
    </Grid>
</Window>
